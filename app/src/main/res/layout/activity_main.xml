<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:padding="20dp">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:text="Quản lý Thư viện"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <!-- Nhập nhân viên -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhân viên"
            android:textSize="16sp"
            android:textColor="#555555" />

        <EditText
            android:id="@+id/edtStaff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Tên nhân viên"
            android:background="@null"
            android:inputType="textPersonName"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bg"
            android:text="Cập nhật"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Danh sách sách -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:text="Danh sách Sách"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/bookListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách A"
                android:textSize="16sp"
                android:padding="8dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sách B"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Nút Thêm -->
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_bg"
        android:paddingHorizontal="30dp"
        android:paddingVertical="10dp"
        android:text="Thêm sách"
        android:textColor="#FFFFFF" />

    <!-- Thanh điều hướng dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#EEEEEE"
        android:padding="6dp">

        <TextView
            android:id="@+id/txtManage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quản lý"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtBooks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sách"
            android:textSize="14sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtStaff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nhân viên"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
